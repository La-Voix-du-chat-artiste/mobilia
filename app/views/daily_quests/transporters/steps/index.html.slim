header.flex.flex-col.lg:flex-row.items-center.justify-between.mb-6.gap-3
  .flex.items-center.gap-2
    - if @transporter.photo.attached?
      = image_tag(@transporter.photo, class: 'w-12 h-12 object-cover rounded-full')
    .dark:text-white
      .flex
        p.italic.text-gray-500=< @transporter.full_name
        = @transporter.periods_for?(@daily_quest.started_on)

      p= @daily_quest.title

  .flex.items-center.justify-between.gap-3
    = link_to '<< Retour au planning',
              daily_quests_path(date: @daily_quest.started_on),
              class: 'btn-back'
    = link_to 'Exporter en PDF', daily_quest_transporter_steps_path(@daily_quest, @transporter, format: :pdf), target: :_blank, class: 'btn-show'
    = link_to 'Modifier', edit_daily_quest_path(@daily_quest), class: 'btn-edit'
    = button_to 'Supprimer', @daily_quest,
                class: 'btn-destroy',
                method: :delete,
                data: { turbo_confirm: 'Voulez-vous supprimer cette queÃªte ?' }

div id=dom_id(@daily_quest)
  .flex.flex-col.lg:flex-row.justify-between.gap-3
    .lg:w-1/2
      h2.text-xl.mb-3 Etapes

      = turbo_frame_tag :steps do
        = render 'daily_quests/missions/steps', steps: @steps

    = render 'daily_quests/transporters/steps/map', steps: @steps
